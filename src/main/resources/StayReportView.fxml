<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="15.0" styleClass="root" stylesheets="@DashboardStyle.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hotelmanagement.view.controllers.StayReportController">
    <padding>
        <Insets top="25.0" right="25.0" bottom="25.0" left="25.0" />
    </padding>
    <children>
        <Label text="Relatório de Estadias" styleClass="dashboard-title" />

        <HBox alignment="BOTTOM_LEFT" spacing="30.0" style="-fx-padding: 10 0 10 0;">
            <VBox spacing="5.0">
                <Label text="Filtrar por Período:" />
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <DatePicker fx:id="startDatePicker" promptText="Data de Início" />
                    <Label text="até" />
                    <DatePicker fx:id="endDatePicker" promptText="Data de Fim" />
                    <Button text="Filtrar" onAction="#handleFilterByDate" styleClass="secondary-button" />
                </HBox>
            </VBox>

            <VBox spacing="5.0">
                <Label text="Buscar por Nome do Hóspede:" />
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <TextField fx:id="guestNameField" promptText="Digite o nome" />
                    <Button text="Buscar" onAction="#handleSearchByGuest" styleClass="secondary-button"/>
                </HBox>
            </VBox>
        </HBox>

        <TableView fx:id="staysTableView" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="reservationIdColumn" text="ID Reserva" prefWidth="100.0" />
                <TableColumn fx:id="guestNameColumn" text="Hóspede" prefWidth="200.0" />
                <TableColumn fx:id="roomNumberColumn" text="Quarto" prefWidth="80.0" />
                <TableColumn fx:id="checkInDateColumn" text="Check-in" prefWidth="120.0" />
                <TableColumn fx:id="checkOutDateColumn" text="Check-out" prefWidth="120.0" />
                <TableColumn fx:id="nightsColumn" text="Noites" prefWidth="80.0" />
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="120.0" />
            </columns>
        </TableView>

        <VBox alignment="CENTER" spacing="10.0">
            <Label fx:id="totalStaysLabel" text="Total de Estadias: 0" styleClass="dashboard-title" />
            <HBox alignment="CENTER" spacing="15.0">
                <Button text="Atualizar" onAction="#handleRefresh" styleClass="primary-button" />
                <Button onAction="#handleVoltar" text="Voltar ao Hub de Relatórios" styleClass="secondary-button" />
            </HBox>
        </VBox>
    </children>
</VBox>