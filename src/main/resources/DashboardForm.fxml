<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="700.0" prefWidth="1100.0" stylesheets="@DashboardStyle.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hotelmanagement.view.controllers.DashboardController">
    <left>
        <VBox prefWidth="200.0" spacing="10.0" styleClass="side-menu">
            <children>
                <Label styleClass="side-menu-title" text="Hotel Manager" />
                <Button onAction="#handleAbrirCadastroGeral" prefWidth="180.0" styleClass="nav-button" text="Cadastro Geral" />
                <Button onAction="#handleAbrirCheckIn" prefWidth="180.0" styleClass="nav-button" text="Check-in" />
                <Button onAction="#handleAbrirCheckOut" prefHeight="38.0" prefWidth="178.0" styleClass="nav-button" text="Check-out" />
                <Button onAction="#handleAbrirFormularioQuarto" prefWidth="180.0" styleClass="nav-button" text="Gerenciar Quartos" />
                <Button onAction="#handleAbrirGestaoServicos" prefWidth="180.0" styleClass="nav-button" text="Gerenciar Serviços" />
                <Button onAction="#handleAbrirPagamentos" prefWidth="180.0" styleClass="nav-button" text="Pagamentos" />
                <Button onAction="#handleAbrirRelatorios" prefWidth="180.0" styleClass="nav-button" text="Relatórios" />
            </children>
        </VBox>
    </left>

    <center>
        <VBox spacing="20.0" style="-fx-background-color: #f4f4f4;">
            <padding>
                <Insets bottom="20.0" left="25.0" right="25.0" top="20.0" />
            </padding>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Visão Geral do Hotel" HBox.hgrow="ALWAYS" />
                    <Label fx:id="dateTimeLabel" style="-fx-font-size: 16px;" text="Data e Hora" />
                </HBox>

                <GridPane hgap="20.0" vgap="20.0">
                    <VBox alignment="CENTER" styleClass="metric-card" GridPane.columnIndex="0">
                        <Label fx:id="occupiedRoomsLabel" styleClass="metric-card-number" text="0" />
                        <Label styleClass="metric-card-title" text="Quartos Ocupados" />
                    </VBox>
                    <VBox alignment="CENTER" styleClass="metric-card" GridPane.columnIndex="1">
                        <Label fx:id="guestCountLabel" styleClass="metric-card-number" text="0" />
                        <Label styleClass="metric-card-title" text="Hóspedes Atuais" />
                    </VBox>
                    <VBox alignment="CENTER" styleClass="metric-card" GridPane.columnIndex="2">
                        <Label fx:id="occupancyRateLabel" styleClass="metric-card-number" text="0%" />
                        <Label styleClass="metric-card-title" text="Taxa de Ocupação" />
                    </VBox>
               <columnConstraints>
                  <ColumnConstraints />
                  <ColumnConstraints />
                  <ColumnConstraints />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
               </rowConstraints>
                </GridPane>

                <HBox spacing="20.0" VBox.vgrow="ALWAYS">
                    <VBox HBox.hgrow="ALWAYS">
                        <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10 0 5 0;" text="Status dos Quartos" />
                        <PieChart fx:id="roomStatusChart" legendVisible="true" prefHeight="350.0" />
                    </VBox>

                    <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                        <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10 0 5 0;" text="Ocupação Total do Hotel" />
                        <ProgressBar fx:id="occupancyProgressBar" prefHeight="40.0" prefWidth="400.0" progress="0.0" styleClass="occupancy-progress-bar" />
                        <Label fx:id="occupancyProgressLabel" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="0 / 350" />
                    </VBox>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>
