<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hotelmanagement.view.RoomFormController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Cadastro de Quarto" />

    <GridPane hgap="10.0" vgap="10.0">
        <columnConstraints>
            <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
        </columnConstraints>
        <rowConstraints>
            <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>

        <Label text="Número do Quarto:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="roomNumberField" promptText="Ex: 101" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Tipo do Quarto:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <ComboBox fx:id="roomTypeComboBox" prefWidth="200.0" promptText="Selecione o Tipo" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Preço:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="priceField" promptText="Ex: 250.00" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <ComboBox fx:id="statusComboBox" prefWidth="200.0" promptText="Selecione o Status" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Ocupação Máxima:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="maxOccupancyField" promptText="Ex: 2" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <Label text="Tipo de Cama:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <TextField fx:id="bedTypeField" promptText="Ex: Queen" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    </GridPane>

    <HBox alignment="CENTER" spacing="10.0">
        <Button fx:id="saveButton" onAction="#handleSave" text="Salvar" />
        <Button fx:id="cancelButton" onAction="#handleCancel" text="Cancelar" />
    </HBox>
</VBox>