<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="15.0" styleClass="root" stylesheets="@DashboardStyle.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hotelmanagement.view.controllers.CheckInController">
    <padding>
        <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
    </padding>
    <children>
        <Label styleClass="dashboard-title" text="Check-ins Pendentes" />

        <!-- Seção de informações do hóspede selecionado -->
        <VBox fx:id="guestInfoPane" visible="false" managed="false" spacing="10.0" styleClass="info-pane">
            <padding>
                <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
            </padding>
            <children>
                <Label text="Hóspede Selecionado:" styleClass="info-label" />
                <Label fx:id="selectedGuestNameLabel" text="Nome do Hóspede" styleClass="guest-name-label" />
                <Label fx:id="selectedGuestDetailsLabel" text="Detalhes da Reserva" styleClass="guest-details-label" />
            </children>
        </VBox>

        <HBox alignment="CENTER">
            <TextField fx:id="searchField" prefWidth="400.0" promptText="Buscar por nome do hóspede..."  />
        </HBox>

        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;" VBox.vgrow="ALWAYS">
            <content>
                <VBox fx:id="cardsContainer" alignment="TOP_CENTER" spacing="10.0">
                    <padding>
                        <Insets top="10.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>

        <Button onAction="#handleVoltar" styleClass="dashboard-btn" text="Voltar" />
    </children>
</VBox>