<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="20.0" styleClass="root" stylesheets="@DashboardStyle.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hotelmanagement.view.controllers.EditGuestController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
    <children>
        <Label styleClass="dashboard-title" text="Editar Informações do Hóspede" />

        <TitledPane animated="false" text="Dados do Hóspede" styleClass="form-section-pane">
            <content>
                <GridPane hgap="10.0" vgap="15.0">
                    <children>
                        <Label text="Nome Completo:" />
                        <TextField fx:id="nameField" GridPane.columnIndex="1" />

                        <Label text="CPF:" GridPane.rowIndex="1"/>
                        <TextField fx:id="cpfField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="Email:" GridPane.rowIndex="2" />
                        <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label text="Telefone:" GridPane.rowIndex="3" />
                        <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                        <Label text="Endereço:" GridPane.rowIndex="4" />
                        <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                    </children>
                    <columnConstraints>
                        <ColumnConstraints />
                        <ColumnConstraints />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>
                </GridPane>
            </content>
        </TitledPane>

        <HBox alignment="CENTER" spacing="15.0">
            <children>
                <Button onAction="#handleSalvarEdicao" text="Salvar Alterações" styleClass="save-button" />
                <Button onAction="#handleCancelar" text="Cancelar" styleClass="cancel-button"/>
                <Button text="Voltar" onAction="#handleVoltar" styleClass="secondary-button" />
            </children>
        </HBox>
    </children>
</VBox>