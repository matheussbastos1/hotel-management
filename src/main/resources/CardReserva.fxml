<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="500.0" styleClass="card-reserva" stylesheets="@DashboardStyle.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hotelmanagement.view.controllers.CardReservaController">
    <padding>
        <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
    </padding>
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <VBox HBox.hgrow="ALWAYS">
                    <children>
                        <Label fx:id="guestNameLabel" styleClass="card-title" text="Nome do Hóspede Principal" />
                        <Label fx:id="reservationDetailsLabel" text="Check-in: 20/07 - Check-out: 25/07 | Quarto: Suíte Família" />
                    </children>
                </VBox>
                <Label fx:id="statusLabel" styleClass="card-status-confirmed" text="CONFIRMADA" />
            </children>
        </HBox>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" VBox.vgrow="NEVER">
            <VBox.margin>
                <Insets top="15.0" />
            </VBox.margin>
            <children>
                <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancelarReserva" styleClass="cancel-button" text="Cancelar Reserva" />
                <Button fx:id="checkinButton" mnemonicParsing="false" onAction="#handleEfetivarCheckin" styleClass="save-button" text="Efetivar Check-in" />
            </children>
        </HBox>
    </children>
</VBox>