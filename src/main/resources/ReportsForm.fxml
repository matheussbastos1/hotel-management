<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hotelmanagement.view.controllers.ReportsController">
    <padding>
        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
    </padding>
    <children>
        <Label text="Relatório Geral de Reservas">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <TableView fx:id="reportsTableView" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="reservationIdColumn" text="ID Reserva" />
                <TableColumn fx:id="guestNameColumn" text="Hóspede Principal" prefWidth="150.0"/>
                <TableColumn fx:id="checkInDateColumn" text="Check-In" />
                <TableColumn fx:id="checkOutDateColumn" text="Check-Out" />
                <TableColumn fx:id="reservationStatusColumn" text="Status Reserva" />

                <TableColumn fx:id="roomNumberColumn" text="Quarto" />
                <TableColumn fx:id="roomTypeColumn" text="Tipo Quarto" />
                <TableColumn fx:id="roomPriceColumn" text="Preço Diária" />

                <TableColumn fx:id="totalAmountColumn" text="Valor Total" />
                <TableColumn fx:id="isPaidColumn" text="Pago?" />
                <TableColumn fx:id="paymentMethodColumn" text="Método Pgto." />

                <TableColumn fx:id="guestEmailColumn" text="Email" prefWidth="180.0"/>
                <TableColumn fx:id="guestPhoneColumn" text="Telefone" prefWidth="120.0"/>
            </columns>
        </TableView>
    </children>
</VBox>