<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="TOP_CENTER" spacing="20.0" styleClass="root" stylesheets="@DashboardStyle.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hotelmanagement.view.controllers.ReportsController">
    <padding>
        <Insets bottom="20.0" left="25.0" right="25.0" top="20.0" />
    </padding>
    <children>
        <Label text="Relatório Geral de Reservas" styleClass="dashboard-title" />

        <TableView fx:id="reportsTableView" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="reservationIdColumn" text="ID Reserva" />
                <TableColumn fx:id="guestNameColumn" prefWidth="150.0" text="Hóspede Principal" />
                <TableColumn fx:id="checkInDateColumn" text="Check-In" />
                <TableColumn fx:id="checkOutDateColumn" text="Check-Out" />
                <TableColumn fx:id="reservationStatusColumn" text="Status Reserva" />
                <TableColumn fx:id="roomNumberColumn" text="Quarto" />
                <TableColumn fx:id="roomTypeColumn" text="Tipo Quarto" />
                <TableColumn fx:id="roomPriceColumn" text="Preço Diária" />
                <TableColumn fx:id="totalAmountColumn" text="Valor Total" />
                <TableColumn fx:id="isPaidColumn" text="Pago?" />
                <TableColumn fx:id="paymentMethodColumn" text="Método Pgto." />
                <TableColumn fx:id="guestEmailColumn" prefWidth="180.0" text="Email" />
                <TableColumn fx:id="guestPhoneColumn" prefWidth="120.0" text="Telefone" />
            </columns>
        </TableView>

        <HBox alignment="CENTER">
            <Button text="Voltar" onAction="#handleVoltar" styleClass="secondary-button" />
        </HBox>
    </children>
</VBox>