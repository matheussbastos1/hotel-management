<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hotelmanagement.view.controllers.ReportsController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
        <Label text="Relatório Geral de Reservas">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <TableView fx:id="reportsTableView" prefWidth="1252.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="reservationIdColumn" text="ID Reserva" />
                <TableColumn fx:id="guestNameColumn" prefWidth="150.0" text="Hóspede Principal" />
                <TableColumn fx:id="checkInDateColumn" text="Check-In" />
                <TableColumn fx:id="checkOutDateColumn" text="Check-Out" />
                <TableColumn fx:id="reservationStatusColumn" text="Status Reserva" />

                <TableColumn fx:id="roomNumberColumn" text="Quarto" />
                <TableColumn fx:id="roomTypeColumn" text="Tipo Quarto" />
                <TableColumn fx:id="roomPriceColumn" text="Preço Diária" />

                <TableColumn fx:id="totalAmountColumn" text="Valor Total" />
                <TableColumn fx:id="isPaidColumn" text="Pago?" />
                <TableColumn fx:id="paymentMethodColumn" text="Método Pgto." />

                <TableColumn fx:id="guestEmailColumn" prefWidth="180.0" text="Email" />
                <TableColumn fx:id="guestPhoneColumn" prefWidth="120.0" text="Telefone" />
            </columns>
        </TableView>
        <Button text="Voltar" onAction="#handleVoltar" />
    </children>
</VBox>
