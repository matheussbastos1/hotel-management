<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" styleClass="root" stylesheets="@DashboardStyle.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hotelmanagement.view.controllers.RemoveRoomController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <VBox alignment="CENTER" spacing="20.0" styleClass="metric-card" maxWidth="400.0">
        <padding>
            <Insets top="30.0" right="40.0" bottom="30.0" left="40.0" />
        </padding>
        <children>
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Remover Quarto" />

            <VBox spacing="10.0" alignment="CENTER">
                <Label text="Digite o nÃºmero do quarto que deseja remover:" style="-fx-font-size: 14px;"/>
                <TextField fx:id="roomNumberField" promptText="Ex: 101" prefWidth="200.0" alignment="CENTER"/>
                <Label fx:id="statusLabel" style="-fx-font-weight: bold;" visible="false"/>
            </VBox>

            <HBox alignment="CENTER" spacing="15.0">
                <padding>
                    <Insets top="15.0" />
                </padding>
                <Button text="Remover" onAction="#handleRemoveRoom" styleClass="danger-button"/>
                <Button text="Cancelar" onAction="#handleCancel" styleClass="cancel-button"/>
            </HBox>
        </children>
    </VBox>
</VBox>