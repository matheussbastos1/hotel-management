<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="600.0" prefWidth="900.0" stylesheets="@ServicesForm.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hotelmanagement.view.controllers.ServicesController">
    <children>
        <Label text="Módulo de Gestão de Serviços">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
            <VBox.margin>
                <Insets bottom="10.0" left="20.0" top="20.0" />
            </VBox.margin>
        </Label>
        <TabPane prefHeight="538.0" prefWidth="900.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Lançar Consumo na Conta">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <GridPane layoutX="32.0" layoutY="31.0" prefHeight="261.0" prefWidth="641.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="314.0" minWidth="10.0" prefWidth="129.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="512.0" minWidth="10.0" prefWidth="512.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <Label text="Quarto:">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </Label>
                                        <Label text="Serviço:" GridPane.rowIndex="1">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </Label>
                                        <Label text="Quantidade:" GridPane.rowIndex="2">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </Label>
                                        <Label text="Valor Total:" GridPane.rowIndex="3">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>
                                        <ComboBox fx:id="quartoComboBox" prefWidth="150.0" promptText="Selecione..." GridPane.columnIndex="1" />
                                        <ComboBox fx:id="servicoComboBox" prefWidth="400.0" promptText="Selecione o serviço consumido..." GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                        <Spinner fx:id="quantidadeSpinner" editable="true" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                        <Label fx:id="valorTotalLabel" text="R$ 0,00" GridPane.columnIndex="1" GridPane.rowIndex="3">
                                            <font>
                                                <Font name="System Bold" size="20.0" />
                                            </font>
                                        </Label>
                                        <Label fx:id="hospedeLabel" text="Hóspede: -" GridPane.columnIndex="1">
                                            <GridPane.margin>
                                                <Insets left="170.0" />
                                            </GridPane.margin>
                                            <font>
                                                <Font name="System Italic" size="14.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </GridPane>
                                <Button fx:id="btnLancar" layoutX="500.0" layoutY="324.0" mnemonicParsing="false" onAction="#handleLancarConsumo" prefHeight="40.0" prefWidth="174.0" text="Lançar na Conta">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Button>
                         <Button layoutX="245.0" layoutY="329.0" onAction="#handleVoltar" text="Voltar" />
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Gerenciar Serviços do Hotel">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <TableView fx:id="tabelaServices" layoutX="25.0" layoutY="25.0" prefHeight="437.0" prefWidth="850.0" AnchorPane.bottomAnchor="25.0" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="25.0">
                                    <columns>
                                        <TableColumn fx:id="colunaNome" prefWidth="450.0" text="Nome do Serviço" />
                                        <TableColumn fx:id="colunaCategoria" minWidth="0.0" prefWidth="250.0" text="Categoria" />
                                        <TableColumn fx:id="colunaPreco" minWidth="0.0" prefWidth="149.0" text="Preço" />
                                    </columns>
                                </TableView>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</VBox>
