<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.GridPane?>

<TitledPane animated="false" text="Dados do Acompanhante" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <content>
        <GridPane hgap="10.0" vgap="10.0" style="-fx-padding: 10;">
            <Label text="Nome Completo:" />
            <TextField fx:id="companionNameField" GridPane.columnIndex="1" promptText="Nome do Acompanhante"/>

            <Label text="Documento (CPF):" GridPane.rowIndex="1" />
            <TextField fx:id="companionDocField" GridPane.columnIndex="1" promptText="Documento do Acompanhante"/>
        </GridPane>
    </content>
    <padding>
        <Insets top="10.0" />
    </padding>
</TitledPane>